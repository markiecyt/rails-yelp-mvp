<div class="container">
  <h1>Add new restaurant</h1>
  <%= simple_form_for [ @restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: false %>
    <%= f.submit "Add restaurant", class: "btn btn-primary" %>
  <% end %>
</div>
