<div class="container">
  <h1>Restaurants</h1>
    <p><%= link_to 'Add new restaurant', new_restaurant_path %></p>
    <% @restaurants.each do |restaurant| %>
      <div class="cards">
          <%= link_to restaurant.name, restaurant_path(restaurant) %>
          <%= restaurant.address %>
          <%= restaurant.category %>
      </div>
    <% end %>

</div>
